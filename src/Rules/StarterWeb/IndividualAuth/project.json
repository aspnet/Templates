{
  /* Click to learn more about project.json  http://go.microsoft.com/fwlink/?LinkID=517074 */
  "webroot": "wwwroot",
  "version": "1.0.0-*",
  "dependencies": {
    "EntityFramework.SqlServer": "{version}",
    "EntityFramework.Commands": "{version}",
    "Microsoft.AspNet.Mvc": "{version}",
    /* "Microsoft.AspNet.Mvc.WebApiCompatShim": "{version}", */
    "Microsoft.AspNet.Authentication.Cookies": "{version}",
    "Microsoft.AspNet.Diagnostics": "{version}",
    "Microsoft.AspNet.Diagnostics.Entity": "{version}",
    "Microsoft.AspNet.Identity.EntityFramework": "{version}",
    "Microsoft.AspNet.Server.IIS": "{version}",
    "Microsoft.AspNet.Server.WebListener": "{version}",
    "Microsoft.AspNet.StaticFiles": "{version}",
    "Microsoft.AspNet.Tooling.Razor": "{version}",
    "Microsoft.Framework.ConfigurationModel.Json": "{version}",
    "Microsoft.Framework.CodeGenerators.Mvc": "{version}",
    "Microsoft.Framework.Logging": "{version}",
    "Microsoft.Framework.Logging.Console": "{version}",
    "Microsoft.VisualStudio.Web.BrowserLink.Loader": "__BrowserLinkPackageVersion__"
  },
  "commands": {
    /* Change the port number when you are self hosting this application */
    "web": "Microsoft.AspNet.Hosting --server Microsoft.AspNet.Server.WebListener --server.urls http://localhost:5000",
    "gen": "Microsoft.Framework.CodeGeneration",
    "ef":  "EntityFramework.Commands"
  },
  "frameworks": {
    "dnx451": { },
    "dnxcore50": { }
  },
  "exclude": [
    "wwwroot",
    "node_modules",
    "bower_components"
  ],
  "bundleExclude": [
    "node_modules",
    "bower_components",
    "**.xproj",
    "**.user",
    "**.vspscc"
  ],
  "scripts": {
    "postrestore": [ "npm install", "bower install" ],
    "prepare": [ "gulp copy" ]
  }
}
