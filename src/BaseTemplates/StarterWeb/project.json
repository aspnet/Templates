{
  "compilationOptions": {
    "emitEntryPoint": true,
    "preserveCompilationContext": true
  },

  "dependencies": {
    "Microsoft.AspNetCore.Diagnostics": "1.0.0-*",
    "Microsoft.AspNetCore.Mvc": "1.0.0-*",
    "Microsoft.AspNetCore.Mvc.TagHelpers": "1.0.0-*",
    "Microsoft.AspNetCore.Server.IISIntegration": "1.0.0-*",
    "Microsoft.AspNetCore.Server.Kestrel": "1.0.0-*",
    "Microsoft.AspNetCore.StaticFiles": "1.0.0-*",
    "Microsoft.Extensions.Configuration.FileExtensions": "1.0.0-*",
    "Microsoft.Extensions.Configuration.Json": "1.0.0-*",
    "Microsoft.Extensions.Logging": "1.0.0-*",
    "Microsoft.Extensions.Logging.Console": "1.0.0-*",
    "Microsoft.Extensions.Logging.Debug": "1.0.0-*",$if$ ($context$ == WebCore)
    "Microsoft.NETCore.App": {
      "type": "platform",
      "version": "__NetCorePlatformVersion__"
    },$endif$
    "Microsoft.VisualStudio.Web.BrowserLink.Loader": "__VSVER__.0-*",
  },

  "frameworks": {$if$ ($context$ == WebCore)
    "netcoreapp1.0": {
      "imports": [
        "dnxcore50",
        "portable-net45+win8"
      ]
    }$else$
    "$netframeworkversion$": { }$endif$
  },
$if$ ($context$ == WebCore) $else$
  "runtimes": {
    "win7-x64": { },
    "win7-x86": { }
  },
$endif$
  "tools": {
    "Microsoft.AspNetCore.Server.IISIntegration.Tools": "1.0.0-*",
    "dotnet-razor-tooling": "1.0.0-*"
  },

  "content": [
    "wwwroot",
    "Views",
    "appsettings.json"
  ],

  "exclude": [
    "node_modules"
  ],

  "scripts": {
    "prepublish": [ "npm install", "bower install", "gulp clean", "gulp min" ],
    "postpublish": [ "dotnet publish-iis --publish-folder %publish:OutputPath%" ]
  }
}
